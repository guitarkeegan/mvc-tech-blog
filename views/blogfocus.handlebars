{{!-- This page will display all of the related date to a specific post. If logged in, users can also post a comment. --}}
<div class="blog-post container">
  <div class="post">
    <div class="img img-fluid">
      <img src={{blog.img}} alt="Decorative Image">
    </div>
    <h2 class="title">{{blog.title}}</h2>
    <h3 class="subtitle"><a href="/blog/{{blog.id}}">{{blog.subtitle}}</a></h3>
    <p class="author"> by {{blog.user.username}}</p>
    <p class="date-created">{{format_date blog.date}}</p>
    <p class="content">{{blog.content}}</p>
  </div>
  <div id="comment-container" class="container">
    {{#each blog.comments as |comment|}}
    <div class="comment">
      <p>user: {{comment.user.username}}</p>
        <p>said: {{comment.content}}</p>
        <p>posted: {{format_date comment.date}}</p>
    </div>
    {{!-- if logged in, users will see the form to add a comment --}}
    {{/each}}
    {{#if loggedIn}}
  </div>
  {{> addcomment}}
</div>
{{/if}}
<script src="/js/blogfocus.js"></script>